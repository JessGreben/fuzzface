<div class="reports-filter">
  <form class="recent-reports-form">
    <input type="hidden" name="sw" value="">
    <input type="hidden" name="ne" value="">
    <input type="hidden" name="filter_tags" value="" class="hidden-tags">
    <div class="padded">
      <input type="text" class="form-control tags-filter" placeholder="Search Tags">
    </div>
    <div class="form-group">
      <select name="report_type" class="form-control filter-control">
        <option value="">Lost or Found</option>
        <option value="lost">Lost</option>
        <option value="found">Found</option>
      </select>
    </div>
    <div class="form-group">
      <select name="animal_type" class="form-control filter-control">
        <option value="">Pet Type</option>
        <option value="dog">Dog</option>
        <option value="cat">Cat</option>
        <option value="bird">Bird</option>
        <option value="reptile">Reptile</option>
        <option value="other">Other</option>
      </select>
    </div>
    <div class="form-group">
      <select name="color" class="form-control filter-control color-select" data-values="">
        <option value="">Color</option>
      </select>
    </div>
    <div class="form-group">
      <select name="breed" class="form-control filter-control breed-select" data-values="">
        <option value="">Breed</option>
      </select>
    </div>
    <div class="form-group">
      <select name="sex" class="form-control filter-control">
        <option value="">Sex</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
    <div class="form-group">
      <select name="pet_size" class="form-control filter-control">
        <option value="">Size</option>
        <option value="small">Small</option>
        <option value="medium">Medium</option>
        <option value="large">Large</option>
        <option value="x-large">Extra Large</option>
      </select>
    </div>
    <div class="form-group">
      <select name="age" class="form-control filter-control">
        <option value="">Age</option>
        <option value="Baby">Baby</option>
        <option value="young">Young</option>
        <option value="adult">Adult</option>
        <option value="senior">Senior</option>
      </select>
    </div>
    <div class="form-group">
      <input type="button" value="Reset Filters" class="btn btn-default form-control reset-filter-button">
    </div>
  </form>
  <button class="btn-block main-buttons filter-btn">Filter</button>
</div>