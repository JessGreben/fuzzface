<form class="found-pet-form">


          <input type="hidden" name="report[report_type]" value="found">
          <div class="form-group">
            <select class="form-control">
              <option value="">Pet Type</option>
              <option value="dog">Dog</option>
              <option value="cat">Cat</option>
              <option value="bird">Bird</option>
              <option value="reptile">Reptile</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" id="found-pet-breed" placeholder="Pet Breed" name="found-pet-breed">
          </div>

          <div class="form-group">
            <select class="form-control">
              <option value="">Sex</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
          </div>
          <div class="form-group">
            <select class="form-control">
              <option value="">Size</option>
              <option value="small">Small</option>
              <option value="medium">Medium</option>
              <option value="large">Large</option>
              <option value="extra large">Extra Large</option>
            </select>
          </div>
          <div class="form-group">
            <select class="form-control">
              <option value="">Age</option>
              <option value="Baby">Baby</option>
              <option value="young">Young</option>
              <option value="adult">Adult</option>
              <option value="senior">Senior</option>
            </select>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" id="found-pet-tags" placeholder="Additional Tags, i.e. timid, brown ears" name="found-pet-tags">
          </div>
          <div class="form-group">
            <textarea name="notes" class="form-control" id="found-pet-notes" cols="30" rows="7" placeholder="Describe the incident"></textarea>
          </div>
          <div class="form-group">
            <input class="hidden-lat-field" type="hidden" name="lat" value="">
          </div>
          <div class="form-group">
            <input class="hidden-lng-field" type="hidden" name="lng" value="">

          </div>

          <div id="found-map-canvas" style="width: 300px; height: 300px;"></div>


          <button type="submit" class="btn btn-default">Submit</button>
        </form>
